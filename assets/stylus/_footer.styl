.footer
  position fixed
  left 0
  bottom 0
  z-index 10
  display flex
  align-items center
  justify-content center
  padding 1rem 0
  width 100%
  font-weight normal
  font-size 1rem
  color $white
  background-color $black
  opacity 0
  transform translateY(0) scale(1)
  transition transform 300ms ease

  &.hide
    transform translateY(100%) scale(0.9)

  &__contact
    display inline-block
    color $white

    .name
      display block
      font-size 20px
      line-height 1.2
      font-family fontSub

      @media $tablet
        font-size 28px

    .slogan
      font-weight normal
      margin-top 5px
      text-transform uppercase
      font-size 14px
      letter-spacing 0.13em

    &:hover
      color $white

  @media $tablet
    position static!important;
    padding 1.75rem 0
    transform translateY(0) scale(1)!important
