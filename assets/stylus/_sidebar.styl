.sidebar
  padding-bottom 7vh

  &__item
    margin-bottom 30px
    display flex

    @media $desktop
      margin-bottom 7vh

  &__card
    flex-grow 1
    width 100%
    padding 3.5rem 2.25rem 2.5rem
    font-size 14px
    line-height 1.4
    background-color #eeeeee;

    &:last-of-type
      margin-bottom 0

  &__card-title
    margin-bottom: 1.5rem

    h3
      margin-bottom: 0
      font-weight 500

      + hr
        margin 0
        border-color $gray-500

  &__category
    > *
      margin-bottom: 0.75rem

    a
      display flex
      justify-content space-between

  &__popular
    > *
      margin-bottom: 1.25rem

    &-item
      display flex

    &-pic
      width 60px
      height 60px
      overflow hidden

      img
        {thumb-hover-rotate}

    &-main
      flex 1
      margin-left 12px

    &-title
      margin 0
      font-weight 600

      a
        text-decoration none

    &-date
      font-weight: 500
      color $gray-600
      font-size 10px

  &__social
    margin-left -1rem
    font-size: 36px

    > *
      margin 0 0 1rem 1rem

    a
      color inherit

      &:hover
        color $gray-600

  &__tags
    margin-left -1.75rem

    a
      @extend .link-weight

    > *
      padding 0
      margin 0 0 1rem 1.5rem
