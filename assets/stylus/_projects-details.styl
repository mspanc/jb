.project-slider
  position absolute
  left 0
  width 100%
  z-index 1
  background-color #fff
  cursor all-scroll

  .carousel-item
    height auto
    transition transform 0.8s ease, opacity 0.8s ease-out

  &__item-row
    position relative
    padding-top $header-height
    height 100vh
    align-items stretch
    overflow hidden

  &__left
    position relative
    display flex
    align-items center
    z-index 2

  &__gallery
    position relative
    flex-grow 1
    border-right 1px solid #ffffff

  &__category
    margin-bottom 0
    text-transform uppercase
    font-size 14px
    line-height: 1
    letter-spacing 0.1em
    color $gray-600

  &__title
    @extend .h1
    margin-bottom 2.75rem

  &__desc
    font-weight 500
    font-size 14px

    > *
      margin-bottom 1.5rem

      &:last-of-type
        margin-bottom 0

  &__dots
    position absolute
    margin 0
    bottom 0
    left 0
    right 0
    display flex
    list-style none
    padding 0
    z-index 1000

    li
      flex-grow 1
      height 12px
      margin 0
      text-indent inherit
      cursor pointer
      background-color $gray-600
      transition background-color 300ms
      overflow hidden

      &::before
        display block
        content ''
        width 100%
        height 100%
        background-color $black
        transform scaleY(0)
        transform-origin 0 100%
        transition transform 0.5s ease-in

      &:hover
        background-color $white

      &.active
        background-color $white

        &::before
          transform scaleY(1)
          transition transform 1s ease-in

  &__nav
    display none
    height 50px
    padding 10px
    margin 0 -15px
    text-align center
    overflow hidden

    a
      width 50%
      display flex
      align-items center
      justify-content center
      flex-direction column

      &:first-child
        align-items flex-start

      &:last-child
        align-items flex-end

    &-label
      position relative
      font-weight 700
      font-size 14px
      color $gray-600
      border-bottom-width 0
      transition transform 0.35s

      &.previus
      &.next
        &::before
          position absolute
          top 100%
          left 0
          display block
          content ''
          width 100%
          height 1px
          transform translateY(5px)
          opacity 0
          background-color $black
          transition all 0.35s

      a:hover &
        &.previus
          &::before
            opacity 1
            transform translateY(0px)

        &.next
          &::before
            opacity 1
            transform translateY(0px)

    &-title
      margin 0.8rem 0 0
      font-weight 600
      font-size 1.25rem
      line-height 1.1
      color $black
      transition opacity 1s ease, transform 1s ease
      opacity 1
      transform translateY(0)

      .animated-fade &
        transition opacity 500ms ease, transform 1s ease
        transform translateY(100%)
        opacity 0

      span
        border-bottom 1px solid transparent

        a:hover &
          border-bottom-color currentColor

  @media $tablet
    &__item-row
      height calc(100vh - 15px - 120px)

    &__dots
      position relative
      li
        height 15px

    &__nav
      display flex
      height 120px
      padding 10px 30px



