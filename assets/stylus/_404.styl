.error-page
  display flex

  .container-fluid
    padding 10vh 15px

  .line
    width 1px
    margin 1.5rem auto 2rem
    border-left 1px solid $gray-600
    height 130px

  &__title
    font-size 9.6rem
    line-height 1
    font-weight normal
    font-family font-secondary

  &__text
    margin-top 1.25rem
    font-size 2.25rem
    line-height 1.2
    text-transform uppercase

    @media $tablet-small
      margin-top 2rem

  &__bottom
    .btn
      max-width 350px
